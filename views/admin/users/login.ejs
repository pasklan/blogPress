<%- include ../../partials/header.ejs %>
<div class="container">
  <hr />
  <div class="card mt-5">
    <div class="card-header">
      <h2>Login de admin</h2>
    </div>
    <div class="card-body">
      <form action="/authenticate" method="post">
        <input
          class="form-control"
          type="text"
          name="login"
          id="login"
          placeholder="Seu Login"
        />
        <p></p>
        <input
          class="form-control"
          type="password"
          name="password"
          id="password"
          placeholder="******"
        />
        <p></p>
        <button type="submit" class="btn btn-success btn-block">Logar</button>
      </form>
    </div>
  </div>
</div>

